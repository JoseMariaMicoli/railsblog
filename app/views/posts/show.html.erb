<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    	<div class="panel panel-default">
    		<div class="panel-heading" style="background-color: #3399ff;">
				<p>
  					<h1 align="center"><%= @post.title %></h1>
				</p>
			</div>
			<div class="panel-body" style="background-color: #ffeead;">

				<p>
  					<strong><%= raw(@post.body) %></strong>
				</p>
				<div class="btn-group pull-right">
                	<%= link_to like_post_path(@post), method: :put, class: "btn btn-success" do %>
                  		<span class="glyphicon glyphicon-thumbs-up"/>
                    		<%= @post.get_upvotes.size %>
                	<% end %>
                	<%= link_to 'Voltar', posts_path, class: "btn btn-warning" %>
                </div>
			</div>
			<div class="panel-footer" style="background-color: #ffc700">
				<strong>Por <%= image_tag @post.user.gravatar_url %> <%= @post.user.email %> a <%= time_ago_in_words(@post.created_at) %> atras.</strong>
			</div>
  		</div>
  		<div class="panel panel-default">
  			<div class="panel-heading" style="background-color: #3399ff">
				<h2><%= @post.comments.count %> comentarios</h2>
			</div>
  			<div class="panel-body" style="background-color: #ffeead">
  				<%= render @post.comments %>
				<h3>Add a comment:</h3>
				<%= render "comments/form" %>
			</div>
  		</div>
  	</div>
</div>