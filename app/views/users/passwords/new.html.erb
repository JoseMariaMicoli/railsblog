<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
<div class="panel panel-default panel-login">
	<div class="panel-heading" style="background-color: #3399ff">
<h2>Forgot your password?</h2>
</div>
<div class="panel-body">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email , input_html: { class: 'form-control'}, required: true, autofocus: true %></br>
  </div>


  <div class="form-actions">
  	<div class="btn-group pull-right">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-danger" %>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
</div>
  </div>
  </div>
  </div>
