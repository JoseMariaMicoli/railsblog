<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
<div class="panel panel-default panel-login" style="max-width: 400px">
	<div class="panel-heading" style="background-color: #3399ff">
<h2>Log in</h2>
</div>
<div class="panel-body">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control'} %>
    <%= f.input :password, required: false, input_html: { class: 'form-control'}  %>
    <%= f.input :remember_me, input_html: { class: 'form-control'}, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
  	<div class="btn-group pull-right">
    <%= f.button :submit, "Log in", class: "btn btn-success" %>

<% end %>

<%= render "users/shared/links" %>
</div>
</div>
</div>
  </div>
  </div>
  </div>