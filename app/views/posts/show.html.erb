<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    	<div class="panel panel-default">
    		<div class="panel-heading" style="background-color: #3399ff;">
				<p>
  					<h1 align="center"><%= @post.title %></h1>
				</p>
			</div>
			<div class="panel-body" style="background-color: #ffeead;">

				<p>
					<%= image_tag @post.image.url(:medium) %>
				</p>

				<p>
  					<strong><%= raw(@post.body) %></strong>
				</p>

				<%= link_to 'Edit', edit_post_path(@post) %> |
				<%= link_to 'Back', posts_path %>
			</div>
			<div class="panel-footer" style="background-color: #ffc700">
				<div id="comments">
    				<h2><%= @post.comments.count %> Comments</h2>
    				<%= render @post.comments %>
 
    				<h3>Add a comment:</h3>
    				<%= render "comments/form" %>
  				</div>
  			</div>
  		</div>
	</div>
</div>